---
import PostHeader from "../blog/post-header.astro";
import MainHeader from "./main-header.astro";
import Navbar from "../navbar.astro";
import "@fontsource-variable/inter";
import "../../global.css";
import Footer from "../footer.astro";
import Sidebar from "../sidebar.astro";

const { frontmatter } = Astro.props;

const {
  title,
  description,
  date,
  publishedDate,
  updatedDate,
  ogImage,
  category,
  author,
  image,
} = frontmatter;
---

<!DOCTYPE html>
<html class="dark" lang="en">
  <MainHeader {title} {description} {ogImage}>
    <meta
      property="article:published_time"
      content={`${publishedDate.split("T")[0]}T13:50:13+00:00`}
    />
    <meta
      property="article:modified_time"
      content={`${updatedDate.split("T")[0]}T16:52:29+00:00`}
    />
    <link rel="stylesheet" href="/prism-dracula.css" />
  </MainHeader>

  <body>
    <Navbar />

    <main class="w-full md:max-w-[1248px] md:mx-auto px-3 pb-2">
      <div class="w-full h-full md:flex relative">
        <section
          class="post-content relative md:w-[70%] lg:w-[60%] mx-auto text-[19px]"
        >
          <PostHeader {title} {publishedDate} {updatedDate} />
          <article>
            <slot />
          </article>
        </section>

        <!-- <Sidebar /> -->
      </div>
    </main>
    <Footer />
  </body>
</html>
