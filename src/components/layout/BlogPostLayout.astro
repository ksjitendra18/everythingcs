---
import PostHeader from "../blog/PostHeader.astro";
import MainHeader from "./MainHeader.astro";
import Navbar from "../Navbar.astro";

import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "../../global.css";
import Footer from "../Footer.astro";

const { frontmatter } = Astro.props;

const {
  title,
  description,
  date,
  publishedDate,
  updatedDate,
  ogImage,
  category,
  author,
  image,
} = frontmatter;
---

<html lang="en">
  <MainHeader {title} {description} {ogImage}>
    <meta
      property="article:published_time"
      content={`${publishedDate.split("T")[0]}T13:50:13+00:00`}
    />
    <meta
      property="article:modified_time"
      content={`${updatedDate.split("T")[0]}T16:52:29+00:00`}
    />
    <link rel="stylesheet" href="/prism-dracula.css" />
  </MainHeader>

  <body>
    <Navbar />

    <main class="w-full md:max-w-[1248px] md:mx-auto px-3 pb-2">
      <div class="w-full md:flex">
        <section class="post-content md:w-[70%] text-[19px]">
          <PostHeader {title} {publishedDate} {updatedDate} />
          <slot />
        </section>

        <!-- <Sidebar /> -->
      </div>
    </main>
    <Footer />
  </body>
</html>
