---
import ThemeToggle from "./theme-toggle.astro";
---

<header class="relative h-[80px] bg-primaryColour dark:bg-[#1f2023] text-white">
  <div
    class="h-full max-w-7xl mx-auto flex justify-between items-center py-2 px-3"
  >
    <a href="/" class="font-bold text-2xl px-3 md:px-0"> EverythingCS</a>
    <nav
      class="mainNav z-30 hidden md:flex absolute md:static top-14 md:top-0 items-center w-full md:w-auto justify-center bg-primaryColour dark:bg-[#1f2023]"
    >
      <ul
        class={`flex flex-col md:flex-row text-[20px] py-5 md:py-3 justify-center  items-center gap-5 `}
      >
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/blog/">Blog</a>
        </li>
        <li>
          <a href="/tools/">Tools</a>
        </li>
        <li>
          <a href="/about/">About</a>
        </li>

        <li class="md:ml-7 mt-1">
          <ThemeToggle />
        </li>
      </ul>
    </nav>
    <div class={`px-3 hamburger  block md:hidden mt-1 cursor-pointer`}>
      <span class="bar block w-[30px] h-[4px] bg-white"></span>
      <span class="bar block w-[30px] mt-1 h-[4px] bg-white"></span>
      <span class="bar block w-[30px] mt-1 h-[4px] bg-white"></span>
    </div>
  </div>
</header>

<script>
  const hamburger = document.querySelector(".hamburger");
  const mainNav = document.querySelector(".mainNav");

  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    mainNav?.classList.toggle("hidden");
    mainNav?.classList.toggle("flex");
  });
</script>

<style>
  .hamburger.active > span.bar:nth-child(2) {
    display: none;
  }
  .hamburger.active > span.bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .hamburger.active > span.bar:nth-child(3) {
    transform: translateY(-1px) rotate(-45deg);
  }
</style>
