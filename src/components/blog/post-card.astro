---
import formatDate from "../../utils/formatDate";
const { slug, title, description, ogImage, updatedDate } = Astro.props;
---

<a
  href={`/blog/${slug}/`}
  class="border-[#3a3c41] dark:border-[#7d828d] border-2 rounded-sm px-4 py-2 flex flex-col items-start justify-between hover:bg-[#5e687c20] transition-all duration-100 ease-in"
>
  <h2 class="text-2xl font-semibold">{title}</h2>

  <span class="mt-1 text-slate-800 dark:text-slate-300"
    >{formatDate(updatedDate)}</span
  >

  <p class="mt-3">{description}</p>
</a>
