---
import formatDate from "../../utils/formatDate";

const { title, publishedDate, updatedDate } = Astro.props;

let displayDate = formatDate(publishedDate);
if (publishedDate !== updatedDate) {
  displayDate = formatDate(updatedDate);
}
---

<h1 class="my-5 font-bold text-2xl md:text-3xl">{title}</h1>

<p class="mb-5 -mt-3 text-gray-500">
  {publishedDate !== updatedDate ? "Last updated on" : "Published On"}
  <time>
    {displayDate}
  </time>
</p>
